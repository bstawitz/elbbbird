<div class="thumbnails">
<% @posts.each do |post| %>
	<% @post = post %>
  <div class="span4" style="float: left; margin: 20px; text-align: center;">
		<div class="well">
			<%= link_to image_tag(post.image.url(:resize), :class => "img-polaroid"), post.image.url %>
			<p style="font-size: 14px; margin-top: 10px;"><strong><%= post.content %></strong></p>
			<p><%= post.user.email %>
			<% unless current_user.nil? || post.user.id == current_user.id %>
				<div class="like<%= post.id %>" data-toggle="button">
					<%= render 'likes/like_button', :post => @post %>
				</div>
			<% else %>
				<br />
				Likes:<%= post.likes.count %>
			<% end %>
		</div>
	</div>
<% end %>
</div>